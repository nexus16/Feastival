<h3 class="titlee-not-join"><%= t ".title" %></h3>
<div class="col-sm-7 show-info">
  <div class="col-sm-2"></div>
  <div class="col-sm-10">
    <p class="title-not-join"><%= t ".category" %></p>
    <p><%= group.category.name %></p>
    <p class="title-not-join"><%= t ".group_name" %></p>
    <p><%= group.title %></p>
    <p class="title-not-join"><%= t ".time" %></p>
    <p><%= l group.time, format: :time_info_message %></p>
    <p class="title-not-join"><%= t ".address" %></p>
    <p><%= group.address%></p>
    <p class="title-not-join"><%= t ".size" %></p>
    <p><%= group.group_users.count.to_s + "/" + group.size.to_s %></p>
    <p class="title-not-join"><%= t ".creator" %></p>
    <p><%= group.creator.profile.name %></p>
    <% if user_signed_in? %>
      <% unless current_user.is_admin? %>
        <div>
          <%= render "join", group: group,
            group_user: group_user_build %>
        </div>
      <% end %>
    <% else %>
      <div>
        <%= render "join", group: group,
          group_user: group_user_build %>
      </div>
    <% end %>
    <p class="user-join-infomation">
      <%= t ".user_info" %>
    </p>
    <div class="user-join">
      <% group.users.each do |user| %>
        <div class="col-md-2 user-join-info">
          <%= image_tag user_avatar(user.profile.avatar_url),
            class: "img-responsive" %>
          <p class="name-user">
            <%= link_to user.profile.name, user_path(user) %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-sm-5 show-map">
  <div id="showMap" class="google-map-show"></div>
</div>
