<% provide :title, t(".title") %>
<div class="main-form">
  <div class="container-form">
    <div class="main-wrapper-form">
      <div class="row">
        <div class="form-login">
          <div class="col-md-4 col-md-offset-4">
            <h1 class="title-login"><%= t ".title" %></h1>
            <div class="line"></div>
            <%= form_for resource, as: resource_name,
              url: session_path(resource_name) do |f| %>
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control",
                placeholder: t(".email") %>

              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control",
                placeholder: t(".btn_password")%>

              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me, class: "remember-checkbox" %>
                <span><%= t ".remember" %></span>
              <% end %>

              <%= f.submit t(".btn_login"), class: "btn btn-primary" %>
            <% end %>
            <p><%= t ".new_user" %> <%= link_to t(".btn_signup"),
              signup_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
