<% provide :title, t(".title") %>
<div class="main-form">
  <div class="container-form">
    <div class="main-wrapper-form">
      <div class="row">
        <div class="form-signup">
          <div class="col-md-4 col-md-offset-4">
            <h1 class="title-signup"><%= t ".title" %></h1>
            <div class="line"></div>
            <%= form_for resource, as: resource_name,
              url: registration_path(resource_name) do |f| %>

              <%= devise_error_messages! %>

              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control",
                placeholder: t(".email") %>

              <%= f.label :password, t(".btn_password") %>
              <%= f.password_field :password, class: "form-control",
                placeholder: t(".btn_password") %>

              <%= f.label :password_confirmation, t(".btn_confirm") %>
              <%= f.password_field :password_confirmation,
                class: "form-control", placeholder: t(".btn_confirm")  %>

              <%= f.submit t(".btn_createaccount"),
                class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
